{
	"name": "Amachans",
	"build": {
		"dockerfile": "./Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"esbenp.prettier-vscode",
				"streetsidesoftware.code-spell-checker",
				"mathiasfrohlich.Kotlin"
			],
			"settings": {
				"editor.tabSize": 4,
				"editor.formatOnSave": true,
				"[typescript]": {
				"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"[json]": {
				"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"[css]": {
				"editor.defaultFormatter": "esbenp.prettier-vscode"
				}
			}
		}
	}
}
